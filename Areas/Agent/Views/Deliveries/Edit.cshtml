@model OrderViewModel

@{
    ViewData["Title"] = "Edit Order Status";
}

<h1>Edit Order Status</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Status" class="control-label">Order Status</label>
            <select asp-for="Status" asp-items="@ViewBag.OrderStatus" class="form-control">
                <option value="null">Choose a status</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
